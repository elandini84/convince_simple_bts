<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE robot PUBLIC "-//YARP//DTD yarprobotinterface 3.0//EN" "http://www.yarp.it/DTD/yarprobotinterfaceV3.0.dtd">
<robot name="FakeBattery" prefix="FakeBattery" xmlns:xi="http://www.w3.org/2001/XInclude">
   <devices>
        <device name="battery1" type="battery_nws_yarp">
            <param name="period">   20                  </param>
            <param name="name">   /battery_nws       </param>

            <action phase="startup" level="5" type="attach">
                <paramlist name="networks">
                    <elem name="my_battery">  my_battery </elem>
                </paramlist>
            </action>

            <action phase="shutdown" level="5" type="detach" />
        </device>

        <device name="my_battery" type="fakeBattery">
            <param name="charge">   100                  </param>
            <param name="period">   20                  </param>

        </device>

   </devices>
</robot>